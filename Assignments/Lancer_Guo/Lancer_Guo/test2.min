# computes e^x taylor series with 1000 iterations

var x:int = 0;
var result:float = 0.0;
var n:int = 0;

read(x);

while(n < 1000) {
	# compute x^n
	var exp:int = 1;
	var counter:int = 1;
	if (n == 0) {
		exp = 1;
	} else {
		while(counter <= n) {
			exp = exp * x;
			counter = counter + 1;
		}
	}


	# computer n!
	var fact:int = 1;
	var iter:int = 1;
	if (n == 0) {
		fact = 1;
	} else {
		while (iter <= n) {
			fact = fact * iter;
			iter = iter + 1;	
		}
	}


	# compute summation of x^n/n!
	result = result + (exp/fact);


	# increase loop counter
	n = n + 1;
}

print("result of e^x with x=");
